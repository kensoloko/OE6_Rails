<div class="row head">
  <div class="col-md-1 stick"><%= t ".bill_status_#{bill.status}" %></div>
  <div class="col-md-7">Bill #<%= bill.id %></div>
  <div class="col-md-4 text-right">Order date: <%= bill.created_at.strftime "%d/%m/%Y" %></div>
</div>
<div class="bill-details">
  <%= render bill.bill_details %>
</div>
<% if bill.status == 1 %>
  <div class="cancel text-center">
    <div class="row">
    <div class="col-md-offset-11 col-md-1 stick-red">
      <%= link_to ".cancel", user_bill_path(@user,bill),
        method: :delete,
        data: {confirm: "Are you sure you want to cancel your order?"} %>
    </div>
    </div>
  </div>
<% end %>
