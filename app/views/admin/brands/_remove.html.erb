<div class="modal-dialog">
  <div class="modal-content">
  <div class="modal-header">
    <h3><i class="glyphicon glyphicon-trash"></i>
    <%= t "admin.buttons.delete" %> <%= t "admin.buttons.brand" %></h3>
  </div>
  <% if @brand.check_valid_delete_action[0] == 0 %>
    <div class="modal-body">
    <ul class="errors"></ul>
      <p class= "delete_promt" >
        <%= t "admin.buttons.prompt"%> <b><%= @brand.name %></b>
      </p>
      <p class= "delete_promt">
        <%= t "admin.brands.warning_text" %>
      </p>
    </div>
    <div class="modal-footer">
      <%= link_to '<i class="glyphicon glyphicon-ok"></i>&nbsp
        Yes, delete this'.html_safe, admin_brand_path(@brand),
        method: :delete, remote: true, class: "btn btn-danger" %>
      <%= link_to '<i class="glyphicon glyphicon-remove"></i>&nbsp
        No, please don\'t'.html_safe, "#", class: "btn btn-info",
        data: {dismiss: "modal"} %>
    </div>
  <% else %>
    <div class="modal-body">
    <ul class="errors"></ul>
    <p class= "delete_promt" >
      <%= t ".You_cant_delete " %><b><%= @brand.name %></b>
    </p>
    <p class= "delete_promt">
      <%= t "log_remove" %>
      <%= @brand.check_valid_delete_action[2]%>
      <%= t "log_remove2" %>
    </p>
  </div>
  <div class="modal-footer">
    <%= link_to '<i class="glyphicon glyphicon-remove"></i>&nbsp
      No, please don\'t'.html_safe, "#", class: "btn btn-info",
      data: {dismiss: "modal"} %>
  </div>
  <% end %>
  </div>
</div>
