<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3><i class="glyphicon glyphicon-folder-close"></i>&nbsp
        <%= @bill.user.name %>
        <%= t "bills.bill.ofbill"%>
      </h3>
      <h4>
        <i class = "fa fa-clock-o"></i>
        <%= t "admin.bills.create_time" %>
        <%= @bill.created_at.strftime("%B %e, %Y at %I:%M %p") %>
      </h5>
    </div>
    <div class="row">
      <div class="col_-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_content">
            <table id="tblBills"
              class="table table-striped table-bordered dt-responsive nowrap"
              cellspacing="0" width="100%">
              <thead>
                <tr>
                  <th><%= t ".product_name" %></th>
                  <th><%= t ".price" %></th>
                  <th><%= t ".quantity" %></th>
                  <th><%= t ".total" %></th>
                </tr>
              </thead>
              <tbody id="bills" class="product-index">
                <%= render @bill.bill_details %>
                <tr>
                  <td></td>
                  <td></td>
                  <td><h5><%= t "admin.bills.total_price" %></h5></td>
                  <td class="text-right"><%= @bill.total_price %></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="product-modal" class="modal fade"></div>
<script>
  $("#tblBills").dataTable();
</script>
