  <div class="modal-content">
    <%= form_for [:admin, @product], html: {multipart: true},
      remote: true do |f| %>
      <div class="modal-body">
        <ul class="errors"></ul>
        <div class="form-group">
          <%= f.label :name, class:"control-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :price, class: "control-label" %>
          <%= f.number_field :price, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :quantity, class: "control-label" %>
          <%= f.number_field :quantity, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :brand_id, class: "control-label" %>
          <%= f.select :brand_id, @list_brands, {}, {class: "form-control"} %>
        </div>
        <div class="form-group">
          <%= f.label :category_id, class: "control-label" %>
          <%= f.select :category_id, @list_categories, {}, {class: "form-control"} %>
        </div>
        <div class="form-group">
          <%= f.label :description, class: "control-label" %>
          <%= f.text_area :description, class: "form-control txt-area-content" %>
        </div>
        <div class="form-group">
          <%= f.label :content, class: "control-label" %>
          <%= f.text_area :content, class: "form-control txt-area-content" %>
        </div>
        <div class="form-group" >
          <%= f.fields_for :product_images do |p| %>
          <div class="field">
            <%= p.label :image %><br>
            <%= p.file_field :image, multiple: true,
              name: "product[product_images_attributes][][image]",
              class: "upload-image", id: "file" %>
          </div>
          <% end %>
          <div id="preview"></div>
        </div>

      </div>
      <div class="modal-footer">
        <%= button_tag type: f.submit ,class: "btn btn-primary btn-size-default" do %>
          <i class="glyphicon glyphicon-ok"></i>
        <% end %>
        <%= link_to '<i class="glyphicon glyphicon-off"></i>'.html_safe, "#", class: "btn btn-danger btn-size-default", data: {dismss: "modal"} %>
      </div>
    <% end %>
  </div>
<%= javascript_include_tag "admin/show_many_images" %>
