<% provide :title, t("admin.comments.headline") %>
<% provide :page_headline, '<i class="glyphicon glyphicon-envelope"></i>&nbsp
   Comments'.html_safe %>
<div class="page-title">
  <div class="title_left">
    <h3>
      <%= yield :page_headline %>
    </h3>
  </div>
  <div class="title_right">
  </div>
</div>
<div class="clearfix">
  <div class="row">
    <div class="col_-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_content">
          <%= form_tag delete_multiple_admin_comments_path do %>
          <table id="tblBrands" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0"
            width="100%">
            <thead>
              <tr>
                <th class= "text-center table-action-column"></th>
                <th class= "table-action-column">
                  <%= check_box_tag "check_all", "check_all", false,
                  class: "check_all icheckbox_flat-green" %>
                </th>
                <th><%= t "admin.products.name" %></th>
                <th><%= t "admin.users.name" %></th>
                <th><%= t "admin.products.content" %></th>
              </tr>
            </thead>
            <tbody id="brands" class="product-index">
              <%= render "index" %>
            </tbody>
          </table>
          <%= button_tag(type: "submit", class: "btn btn-danger",
            data: {confirm: t("admin.buttons.prompt2")}) do %>
             <i class="glyphicon glyphicon-remove"></i>
             <%= t "admin.buttons.deletes"%>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="product-modal" class="modal fade"></div>
  <script>
    table = $("#tblBrands").dataTable();
    $(document).on("click", ".check_all", function(e) {
      $(".comment-delete").prop("checked", !this.checked);
      $(".comment-delete").click();
    });
  </script>
