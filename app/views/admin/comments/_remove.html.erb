<div class="modal-dialog">
  <div class="modal-content">
  <div class="modal-header">
    <h3><i class="glyphicon glyphicon-trash"></i>
    <%= t "admin.buttons.delete" %> <%= t "admin.buttons.comment" %></h3>
  </div>
  <div class="modal-body">
  <ul class="errors"></ul>
     <%= t("admin.buttons.prompt")%> <b><%= @comment.content %></b>
     <%= t("admin.buttons.belongto")%><b><%= @comment.user.name %>?
  </div>
  <div class="modal-footer">
    <%= link_to '<i class="glyphicon glyphicon-ok"></i>&nbsp
      Yes, delete this'.html_safe, admin_comment_path(@comment),
      method: :delete, remote: true, class: "btn btn-danger" %>
    <%= link_to '<i class="glyphicon glyphicon-remove"></i>&nbsp
      No, please don\'t'.html_safe, "#", class: "btn btn-info",
      data: { dismiss: "modal" } %>
  </div>
  </div>
</div>
