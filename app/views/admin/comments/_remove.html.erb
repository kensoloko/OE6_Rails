<div class="modal-dialog">
  <div class="modal-content">
  <div class="modal-header">
    <h3>Delete Comment</h3>
  </div>
  <div class="modal-body">
  <ul class="errors"></ul>
    Are you sure you wish to delete " <b><%= @comment.content %></b> "
      belong to <b><%= fetch_user_name(@comment.User_id) %>?
  </div>
  <div class="modal-footer">
    <%= link_to "Yes, Delete This Product", admin_comment_path(@comment),
      method: :delete, remote: true, class: "btn btn-danger" %>
    <%= link_to "No, Please Don't", "#", class: "btn btn-default",
      data: { dismiss: "modal" } %>
  </div>
  </div>
</div>
