<% provide :title, t("admin.categories.headline") %>
<% provide :page_headline, '<i class="fa fa-desktop"></i>&nbspCategories
   Manager'.html_safe %>
<% provide :url, new_admin_category_path %>
<%= render "admin/shared/headline" %>
<div class="clearfix">
  <div class="row">
    <div class="col_-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_content">
          <%= form_tag delete_multiple_admin_categories_path do %>
          <table id="tblCategories" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0"
            width="100%">
            <thead>
              <tr>
                <th class= "table-action-column"></th>
                <th class= "table-action-column"></th>
                <th class= "table-action-column">
                  <%= check_box_tag "check_all", "check_all", false,
                  class: "check_all icheckbox_flat-green" %>
                </th>
                <th><%= t "admin.categories.name" %></th>
              </tr>
            </thead>
            <tbody id="categories" class="product-index">
              <%= render "index" %>
            </tbody>
          </table>
          <%= button_tag(type: "submit", class: "btn btn-danger",
            data: {confirm: t("admin.buttons.prompt2")}) do %>
             <i class="glyphicon glyphicon-remove"></i>
             <%= t "admin.buttons.deletes"%>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<div id="product-modal" class="modal fade"></div>
  <script>
    $("#tblCategories").dataTable();
    $(document).on("click", ".check_all", function(e) {
      $(".category-delete").prop("checked", !this.checked);
      $(".category-delete").click();
  });
  </script>
