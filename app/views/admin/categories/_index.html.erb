<% @categories.each do |category| %>
  <tr>
    <td class= "text-center table-action-column">
      <%= link_to '<i class="glyphicon glyphicon-pencil"></i>'.html_safe , edit_admin_category_path(category), remote: true , class: "btn btn-info" %>

    </td>
    <td class= "text-center table-action-column">
      <%= link_to '<i class="glyphicon glyphicon-remove"></i>'.html_safe, admin_category_remove_path(category), remote: true, class: "btn btn-danger" %>
    </td>
    <td>
      <div class="icheckbox_flat-green checked table-action-column">
        <%= check_box_tag "category_ids[]", category.id, false,
          class: "icheckbox_flat-green checked brand-delete" %>
      </div>
    </td>
    <td><%= category.name %></td>
  </tr>
<% end %>
