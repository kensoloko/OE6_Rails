<% provide :title, t("admin.home") %>
<% provide :page_headline, t("admin.home") %>
<div class="clearfix">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="row top_tiles">
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
          <div class="tile-stats">
            <div class="icon"><i class="fa fa-users"></i></div>
            <div class="count"><%= User.total %></div>
            <h3><%= t "admin.base.total_users" %></h3>
          </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
          <div class="tile-stats">
            <div class="icon"><i class="fa fa-dropbox"></i></div>
            <div class="count"><%= Product.total %></div>
            <h3><%= t "admin.base.total_products" %></h3>
          </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
          <div class="tile-stats">
            <div class="icon"><i class="fa fa-shopping-cart"></i></div>
            <div class="count"><%= Bill.today %></div>
            <h3><%= t "admin.base.order_today"%></h3>
          </div>
        </div>
        <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
          <div class="tile-stats">
            <div class="icon"><i class="fa fa-usd"></i></div>
            <div class="count"><%= BillDetail.total_money %></div>
            <h3><%= t "admin.base.total_money_all_time" %></h3>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="x_panel">
    <div class="x_title">
      <h2><%= t "admin.base.buy_revenue" %> <small>(Default: this month)</small></h2>
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content row" style="display: block;">
      <div class="col-md-9" id="chart" style="max-width:1000px; max-height:600px">
        <%= render "data_chart" %>
      </div>
      <div class="col-md-3">
        <%= form_for :index, remote: true do |f| %>
        <div class="row form-group">
          <%= f.label :start %>
          <%= f.date_field :start, class: "form-control" %>
        </div>
        <div class="row form-group">
          <%= f.label :finish %>
          <%= f.date_field :finish, class: "form-control" %>
        </div>
        <div class="row">
          <%= f.submit "Load", class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <div class="x_panel">
        <div class="x_title">
          <h2><%= t "admin.base.top_profiles"%></h2>
          <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <ul class="list-unstyled top_profiles scroll-view x_content">
          <% Bill.tops.each do |u| %>
          <li class="media event top-profile">
            <a class="pull-left">
              <i><%= image_tag u.avatar_url, size: Settings.ava_size %></i>
            </a>
            <div class="media-body">
              <%= link_to u.name, user_url(u.id), class: "title",
                 target: "_blank" %>
              <p><strong>$ <%= u.money %>. </strong> last month</p>
              <p> <small><%= u.count %> bills</small>
              </p>
            </div>
          </li>
          <% end %>
        </ul>
      </div>
    </div>

  <div class="col-md-6">
    <div class="x_panel">
      <div class="x_title">
        <h2><%= t "admin.base.bill_status"%></h2>
        <ul class="nav navbar-right panel_toolbox">
          <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
          </li>
        </ul>
        <div class="clearfix"></div>
      </div>
      <div class="x_content pie-chart">
        <div class="row">
          <div class="col-md-6">
            <canvas id="pie-chart-last" width="100" height="100">
              <span><%= JSON.generate(Bill.status_statistics_last) %></span>
            </canvas>
          </div>
          <div class="col-md-6">
            <canvas id="pie-chart-now" width="100" height="100">
              <span><%= JSON.generate(Bill.status_statistics_now) %></span>
            </canvas>
          </div>
        </div>
      </div>
    </div>
</div>
